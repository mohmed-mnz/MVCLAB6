@model List<Course>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1 class="text-center text-primary mt-5">Courses</h1>
    <div class="d-flex justify-content-start mb-3">
        <a asp-action="New" asp-controller="course" class="btn btn-dark">Add Course</a>
    </div>
    <table class="table table-hover table-bordered table-light">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Degree</th>
                <th scope="col">MinDegree</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Degree</td>
                    <td>@item.MinDegree</td>
                    <td class="action-buttons">
                        <a asp-action="Details" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-success btn-sm">More Details</a>
                        <a asp-action="Edit" asp-controller="course" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
